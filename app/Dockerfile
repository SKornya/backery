# Dockerfile
# Используем образ Node.js в качестве базового образа
FROM node:20

# Установка директории приложения внутри контейнера
WORKDIR /app

# Копируем файлы приложения в контейнер
COPY . .

# Устанавливаем зависимости, если они есть (в данном случае нет)
# RUN npm install

# Команда для запуска скрипта в контейнере
CMD ["node", "main.js"]